@namespace Blazor.AdminLte
<!-- Sidebar user panel (optional) -->
<div class="user-panel mt-3 pb-3 mb-3 d-flex">
    <div class="image">
        <img src="@UserImage" class="@imageEffect @elevation" alt="User Image">
    </div>
    <div class="info">
        <a href="@Link" class="d-block">@ChildContent</a>
    </div>
</div>
@code {
    [Parameter]
    public string Link { get; set; } = "#";
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string UserImage { get; set; }

    [Parameter]
    public Elevation Elevation { get; set; }
    [Parameter]
    public ImageEffect ImageEffect { get; set; }

    private string elevation => Elevation.GetDescription<StyleAttribute>();
    private string imageEffect => ImageEffect.GetDescription<StyleAttribute>();
}
