@inject IPlayerService PlayerService
@namespace Blazor.AdminLte

    <div class="card shadow mr-1 ml-1">
        <div class="card-header p-2">
            <img src="@Value.AvatarImageUrl" class="rounded-circle float-right" alt="" style="width:48px">
            <strong>@Value.Title</strong><br />
            <small>@Value.ArtistName</small>
        </div>
        <div class="card-content">
            <div class="card-body p-3 mt-0" style="background: lightblue url(@Value.CoverImageUrl); -webkit-background-size: cover;  -moz-background-size: cover;  -o-background-size: cover;  background-size: cover;">
                <div class="media">
                    <div class="media-body" >
                        @*<h6>62 BPM</h6>*@
                        <br />
                        <br />
                        <div class="d-flex justify-content-center bg-transparent" @onclick:stopPropagation="true" @onclick='()=>Play(Value.ContentUrl)'>
                            <button class="btn btn-primary btn-square-md" style="opacity: 0.8">
                                <i class="fas fas fa-play fa-lg"></i>
                            </button>@*<img src="./images/sound-wave.jpg" class="w-25 opacity:0.5" />*@
                        </div>
                        <br />
                        <div class="float-right text-shadow text-white text-right align-text-bottom" style="text-shadow: 2px 2px 2px #000">
                            @Value.ContentLength <br/> @Value.ContentBpm
                    </div></div>
                </div>
                </div>
                <div class="card-footer text-muted p-0 mt-0 bg-light opacity-20">
                <div class="mt-0">
                    <div class="row">
                        <div class="col-4 border-right mt-0">
                            <div class="mt-0 p-0 text-center">
                                <strong>5</strong>
                                <p class="mb-0 text-muted"><small>likes</small></p>
                            </div>
                        </div><div class="col-4 border-right mt-0">
                            <div class="mt-0 p-0  text-center">
                                <strong>6</strong>
                                <p class="mb-0 text-muted"><small>reviews</small></p>
                            </div>
                        </div>
                        <div class="col-4 mt-0 light-gradient">
                            <div class="mt-0 p-0 text-center">
                                <strong>7</strong><br />
                                <p class="mb-0 text-muted"><small>plays</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@code {
    [Parameter]
    public TrackCardState Value { get; set; }
    void Play(string url)
    {
        PlayerService.Play(url);
    }
}
